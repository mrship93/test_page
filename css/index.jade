		script.
			$(document).ready(function() {
			$("html").on("click", ".add_country_block .tai_add, .add_country_block .viet_add, .add_country_block .ind_add", function(){
			$(this).appendTo(".country");
			return false;
			});
			
			$("html").on("click", ".country .tai_add, .country .viet_add, .country .ind_add", function()
			{
			$(this).appendTo(".add_country_block");
			
			return false;
			});
			});
		
		script.
			$(document).ready(function(){
			  $( "#slider" ).slider({value : 0,min : 0,max : 5,step : 0.1,create: function( event, ui ) 
			  {val = $( "#slider" ).slider("value");
			  $( "#contentSlider" ).html( val );},
			  slide: function( event, ui ) 
			  {
			  $( "#contentSlider" ).html( ui.value );
			  if (ui.value < 3) { 
			  	$( "#contentSlider, .top_hotels_icon" ).removeClass("top_hotels_yellow").addClass("top_hotels_red");
			  	}
			   if (ui.value > 3) { 
			  	$( "#contentSlider, .top_hotels_icon" ).removeClass("top_hotels_red").addClass("top_hotels_yellow");
			  	}
			  	 if (ui.value >= 4) { 
			  	$( "#contentSlider, .top_hotels_icon" ).removeClass("top_hotels_yellow").addClass("top_hotels_green");
			  	}
			  
			
			  }

			  });
			   	
			  
				    
			  	
			  	
			  });
	
		
